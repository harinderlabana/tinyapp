<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div
      class="collapse navbar-collapse"
      id="navbarNavAltMarkup"
      style="justify-content: space-between"
    >
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (user) { %>
      <div class="navbar-nav">
        <div
          style="margin-right: 0.5rem; margin-top: 0.5rem; margin-bottom: 1rem"
        >
          Logged In As: <%= user.email %>!
        </div>
        <form class="form-inline" action="/logout" method="POST">
          <button type="submit" class="btn btn-outline-dark">Logout</button>
        </form>
      </div>
      <% } else { %>
      <div class="navbar-nav">
        <!-- LOGIN -->
        <form class="form-inline; navbar-nav" action="/login" method="GET">
          <a class="nav-item nav-link" href="/login">Login</a>
        </form>
        <!-- REGISTER -->
        <form class="form-inline; navbar-nav" action="/register" method="GET">
          <a class="nav-item nav-link" href="/register">Register</a>
        </form>
      </div>
      <% } %>
    </div>
  </nav>
</header>
